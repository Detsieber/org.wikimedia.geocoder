<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
    <base>CRM/Geocoder</base>
    <class>Geocoder</class>
    <name>civicrm_geocoder</name>
    <comment>Geocoding provider table</comment>
    <log>true</log>

    <field>
        <name>id</name>
        <type>int unsigned</type>
        <title>Geocoder ID</title>
        <required>true</required>
        <comment>Unique Geocoder ID</comment>
    </field>
    <primaryKey>
        <name>id</name>
        <autoincrement>true</autoincrement>
    </primaryKey>
    <field>
        <name>name</name>
        <type>varchar</type>
        <length>32</length>
        <comment>Provider name</comment>
        <required>true</required>
    </field>
    <field>
        <name>title</name>
        <type>varchar</type>
        <length>32</length>
        <comment>Provider Title</comment>
        <required>true</required>
    </field>
    <field>
        <name>class</name>
        <type>varchar</type>
        <length>32</length>
        <comment>Non generic part of the class name - after Geocoder_Provider. See mgd files for examples</comment>
        <required>true</required>
    </field>
    <field>
        <name>is_active</name>
        <type>boolean</type>
        <comment>Enabled?</comment>
        <default>0</default>
    </field>
    <field>
        <name>weight</name>
        <type>int unsigned</type>
        <comment>Weight</comment>
    </field>
    <field>
        <name>api_key</name>
        <type>varchar</type>
        <length>255</length>
        <comment>API Key</comment>
    </field>
    <field>
        <name>url</name>
        <type>varchar</type>
        <length>255</length>
        <comment>URL (if required)</comment>
    </field>
    <field>
        <name>required_fields</name>
        <type>varchar</type>
        <length>255</length>
        <comment>json array of fields required for this to parse</comment>
    </field>
    <field>
        <name>retained_response_fields</name>
        <type>varchar</type>
        <length>255</length>
        <comment>fields to be retained from the response</comment>
        <default>'["geo_code_1","geo_code_2"]'</default>
    </field>
    <field>
        <name>additional_metadata</name>
        <type>varchar</type>
        <length>255</length>
        <comment>json array of any additional provider specific data</comment>
    </field>
    <field>
        <name>threshold</name>
        <type>int</type>
        <length>11</length>
        <comment>Threshold of queries in period</comment>
    </field>
    <field>
        <name>threshold_unit</name>
        <type>varchar</type>
        <length>12</length>
        <default>'day'</default>
        <comment>Unit in which threshold is measured</comment>
    </field>
    <field>
        <name>threshold_number</name>
        <type>int</type>
        <length>11</length>
        <default>1</default>
        <comment>Number of units in threshold</comment>
    </field>
    <field>
        <name>counter_start</name>
        <type>timestamp</type>
        <comment>When the counter was last reset</comment>
    </field>
    <field>
        <name>counter</name>
        <type>int</type>
        <length>11</length>
        <comment>Number of queries since counter</comment>
        <default>0</default>
    </field>
    <field>
        <name>valid_countries</name>
        <type>string</type>
        <length>255</length>
        <comment>Countries this geocoder is valid for</comment>
        <required>false</required>
    </field>
</table>
